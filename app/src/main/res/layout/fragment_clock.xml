<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsPackages.ClockFragment">

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:padding="8dp"
        android:id="@+id/back_button"
        android:src="@drawable/bacl_arrow"
        android:foreground="?selectableItemBackground"
        android:layout_marginTop="22dp"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_marginTop="22dp"
        android:id="@+id/main_logo"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:textSize="17sp"
        android:textColor="#000000"
        android:text="CLOCK" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/middle_layout"
        android:layout_below="@id/main_logo"
        android:layout_marginTop="5dp"
        android:layout_above="@id/last_update"
        android:gravity="center"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="20:55:59"
        android:gravity="center"
        android:id="@+id/clock_time"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_balck"
        />
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_btn_bg"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:text="UPDATE"
        android:foreground="?selectableItemBackground"
        android:layout_marginBottom="16dp"
        android:id="@+id/clock_update_btn"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorWhite"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/clock_update_btn"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/clock_last_update_time"
        android:text="17:35 PM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAST UPDATE"
        android:id="@+id/last_update"
        android:layout_above="@id/clock_last_update_time"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        />


</RelativeLayout>